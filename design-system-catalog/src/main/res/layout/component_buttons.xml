<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingStart="@dimen/keyline_4"
    android:paddingTop="@dimen/keyline_5"
    android:paddingEnd="@dimen/keyline_4"
    android:paddingBottom="@dimen/keyline_5"
    >

  <io.material.materialthemebuilder.widget.LabelLinkView
      android:id="@+id/label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/button_label_title"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:linkUrl="https://material.io/design/components/buttons.html"
      />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/button_solid_primary"
      style="@style/Widget.Better.HR.Button.Solid.Primary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/component_label_horizontal_margin"
      android:layout_marginEnd="@dimen/keyline_2"
      android:text="@string/text_button"
      tools:ignore="MissingConstraints"
      />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/button_solid_primary_reverse"
      style="@style/Widget.Better.HR.Button.Solid.Primary.Reverse"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/keyline_2"
      android:layout_marginEnd="@dimen/keyline_2"
      android:text="@string/text_button"
      tools:ignore="MissingConstraints"
      />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/button_solid_negative"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/keyline_2"
      android:text="@string/text_button"
      style="@style/Widget.Better.HR.Button.Solid.Error"
      tools:ignore="MissingConstraints"
      />

  <com.google.android.material.button.MaterialButton
      style="@style/Widget.Better.HR.Button.Solid.Error.Reverse"
      android:id="@+id/button_solid_negative_reverse"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/keyline_2"
      android:text="@string/text_button"
      tools:ignore="MissingConstraints"
      />



  <com.google.android.material.button.MaterialButton
      android:id="@+id/button_outline_primary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/keyline_2"
      android:text="@string/text_button"
      style="@style/Widget.Better.HR.Button.Outline.Primary"
      tools:ignore="MissingConstraints"
      />


  <com.google.android.material.button.MaterialButton
      style="@style/Widget.Better.HR.Button.Outline.Error"
      android:id="@+id/button_outline_negative"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/keyline_2"
      android:text="@string/text_button"
      tools:ignore="MissingConstraints"
      />



  <com.google.android.material.button.MaterialButton
      style="@style/Widget.Better.HR.Button.Icon.Menu"
      android:id="@+id/button_icon_menu"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:icon="@drawable/ic_bookmark_24dp"
      android:layout_marginStart="@dimen/keyline_2"
      tools:ignore="MissingConstraints"
      />


  <com.google.android.material.button.MaterialButton
      style="@style/Widget.Better.HR.Button.Icon.Primary"
      android:id="@+id/button_icon_primary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:icon="@drawable/ic_bookmark_24dp"
      android:layout_marginStart="@dimen/keyline_2"
      tools:ignore="MissingConstraints"
      />



  <com.google.android.material.button.MaterialButton
      style="@style/Widget.Better.HR.Button.Text.Primary"
      android:id="@+id/button_text_primary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/text_button"
      android:layout_marginStart="@dimen/keyline_2"
      tools:ignore="MissingConstraints"
      />

  <com.google.android.material.button.MaterialButton
      style="@style/Widget.Better.HR.Button.Text.Secondary"
      android:id="@+id/button_text_secondary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/text_button"
      android:layout_marginStart="@dimen/keyline_2"
      tools:ignore="MissingConstraints"
      />

  <com.google.android.material.button.MaterialButton
      style="@style/Widget.Better.HR.Button.Text.Negative"
      android:id="@+id/button_text_negative"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/text_button"
      android:layout_marginStart="@dimen/keyline_2"
      tools:ignore="MissingConstraints"
      />



  <com.google.android.material.button.MaterialButton
      style="@style/Widget.Better.HR.Button.Text.Primary.Small"
      android:id="@+id/button_text_primary_small"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/text_button"
      android:layout_marginStart="@dimen/keyline_2"
      tools:ignore="MissingConstraints"
      />

  <com.google.android.material.button.MaterialButton
      style="@style/Widget.Better.HR.Button.Text.Secondary.Small"
      android:id="@+id/button_text_secondary_small"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/text_button"
      android:layout_marginStart="@dimen/keyline_2"
      tools:ignore="MissingConstraints"
      />

  <com.google.android.material.button.MaterialButton
      style="@style/Widget.Better.HR.Button.Text.Negative.Small"
      android:id="@+id/button_text_negative_small"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/text_button"
      android:layout_marginStart="@dimen/keyline_2"
      tools:ignore="MissingConstraints"
      />



  <com.google.android.material.button.MaterialButtonToggleGroup
      android:id="@+id/button_group"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/keyline_5"
      android:visibility="gone"
      tools:ignore="MissingConstraints"
      >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_one"
        style="?materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_left_button_label"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_center"
        style="?materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_center_button_label"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_three"
        style="?materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_right_button_label"
        />

  </com.google.android.material.button.MaterialButtonToggleGroup>

  <TextView
      tools:ignore="MissingConstraints"
      android:id="@+id/tv_solid_primary"
      android:text="Solid.Primary"
      android:textAppearance="?textAppearanceBody1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <TextView
      tools:ignore="MissingConstraints"
      android:id="@+id/tv_solid_primary_reverse"
      android:text="Solid.Primary.Reverse"
      android:textAppearance="?textAppearanceBody1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <TextView
      tools:ignore="MissingConstraints"
      android:id="@+id/tv_solid_negative"
      android:text="Solid.Negative"
      android:textAppearance="?textAppearanceBody1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <TextView
      tools:ignore="MissingConstraints"
      android:id="@+id/tv_solid_negative_reverse"
      android:text="Solid.Negative.Reverse"
      android:textAppearance="?textAppearanceBody1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <TextView
      tools:ignore="MissingConstraints"
      android:id="@+id/tv_outline_primary"
      android:text="Outline.Primary"
      android:textAppearance="?textAppearanceBody1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <TextView
      tools:ignore="MissingConstraints"
      android:id="@+id/tv_outline_negative"
      android:text="Outline.Negative"
      android:textAppearance="?textAppearanceBody1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <TextView
      tools:ignore="MissingConstraints"
      android:id="@+id/tv_icon_primary"
      android:text="Icon.Primary"
      android:textAppearance="?textAppearanceBody1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <TextView
      tools:ignore="MissingConstraints"
      android:id="@+id/tv_icon_menu"
      android:text="Icon.Menu"
      android:textAppearance="?textAppearanceBody1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>



  <TextView
      tools:ignore="MissingConstraints"
      android:id="@+id/tv_text_primary"
      android:text="Text.Primary"
      android:textAppearance="?textAppearanceBody1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <TextView
      tools:ignore="MissingConstraints"
      android:id="@+id/tv_text_secondary"
      android:text="Text.Secondary"
      android:textAppearance="?textAppearanceBody1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <TextView
      tools:ignore="MissingConstraints"
      android:id="@+id/tv_text_negative"
      android:text="Text.Negative"
      android:textAppearance="?textAppearanceBody1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>


  <TextView
      tools:ignore="MissingConstraints"
      android:id="@+id/tv_text_primary_small"
      android:text="Text.Primary.Small"
      android:textAppearance="?textAppearanceBody1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <TextView
      tools:ignore="MissingConstraints"
      android:id="@+id/tv_text_secondary_small"
      android:text="Text.Secondary.Small"
      android:textAppearance="?textAppearanceBody1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <TextView
      tools:ignore="MissingConstraints"
      android:id="@+id/tv_text_negative_small"
      android:text="Text.Negative.Small"
      android:textAppearance="?textAppearanceBody1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>


  <androidx.constraintlayout.helper.widget.Flow
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/flow"
      android:layout_marginTop="@dimen/spacing_small"
      android:paddingStart="@dimen/spacing_small"
      android:paddingEnd="@dimen/spacing_small"
      app:constraint_referenced_ids="button_solid_primary,tv_solid_primary,button_solid_primary_reverse,tv_solid_primary_reverse,button_solid_negative,tv_solid_negative,button_solid_negative_reverse,tv_solid_negative_reverse,button_outline_primary,tv_outline_primary,button_outline_negative,tv_outline_negative,button_icon_primary,tv_icon_primary,button_icon_menu,tv_icon_menu,button_text_primary,tv_text_primary,button_text_primary_small,tv_text_primary_small,button_text_secondary,tv_text_secondary,button_text_secondary_small,tv_text_secondary_small,button_text_negative,tv_text_negative,button_text_negative_small,tv_text_negative_small"
      app:flow_maxElementsWrap="2"
      app:flow_verticalGap="@dimen/spacing_xlarge"
      app:flow_wrapMode="chain"
      app:flow_horizontalStyle="spread_inside"
      app:layout_constraintTop_toBottomOf="@+id/label"
      tools:layout_editor_absoluteX="16dp"
      />

</androidx.constraintlayout.widget.ConstraintLayout>
